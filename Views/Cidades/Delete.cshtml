@model CadastrodeClientes.Models.Cidade

@{
    ViewData["Title"] = "Inativar Cidade";
}

<h1>Inativar Cidade</h1>

<h3>Tem certeza que deseja inativar a cidade?</h3>
<div>
    <h4>Cidade</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CodigoIBGE)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CodigoIBGE)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Ativo)
        </dt>
