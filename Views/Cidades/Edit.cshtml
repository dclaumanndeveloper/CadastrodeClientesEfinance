@model CadastrodeClientes.Models.Cidade

@{
    ViewData["Title"] = "Atualizar Cidade";
}

<h1>Atualizar Cidade</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="CodigoIBGE" class="control-label"></label>
                <input asp-for="CodigoIBGE" class="form-control" />
                <span asp-validation-for="CodigoIBGE" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estado" class="control-label"></label>
                <select asp-for="Estado.ID"
                        asp-items="@ViewBag.Estados" class="form-control"></select>
            </div>
            <div class="form-group" style="display:none;">
                <label asp-for="Ativo" class="control-label"></label>
                <input asp-for="Ativo" value="S" class="form-control" />
                <span asp-validation-for="Ativo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Atualizar" class="btn btn-primary" />
                <a asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
